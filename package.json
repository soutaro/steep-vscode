{
	"name": "steep-vscode",
	"displayName": "Steep",
	"description": "Steep type checker",
	"publisher": "soutaro",
	"license": "MIT",
	"version": "0.4.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/soutaro/steep-vscode.git"
	},
	"engines": {
		"vscode": "^1.72.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:."
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "ruby",
				"filenames": [
					"Steepfile"
				]
			}
		],
		"commands": [
			{
				"command": "steep.restartAll",
				"title": "Restart all",
				"category": "Steep"
			}
		],
		"configuration": {
			"title": "Steep",
			"properties": {
				"steep.loglevel": {
					"markdownDescription": "The value for `--log-level` option of Steep Language Server. You can see the output in `output` tab.",
					"type": "string",
					"enum": [
						"error",
						"warn",
						"info",
						"debug"
					],
					"default": "info"
				},
				"steep.jobs": {
					"markdownDescription": "The value for `--jobs` option. This is the number of type-check workers of Steep Language Server.",
					"type": [
						"numeric",
						"null"
					],
					"default": null,
					"minimum": 1
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.0",
		"@types/node": "^18.11.2",
		"@types/vscode": "^1.72.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"tslint": "^6.1.3",
		"typescript": "^4.8.4",
		"vsce": "^2.11.0",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"vscode-languageclient": "^8.0.2"
	}
}
