{
	"name": "steep-vscode",
	"displayName": "Steep",
	"description": "Steep type checker",
	"publisher": "soutaro",
	"license": "MIT",
	"version": "0.3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/soutaro/steep-vscode.git"
	},
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:."
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "ruby",
				"filenames": [
					"Steepfile"
				]
			}
		],
		"commands": [
			{
				"command": "steep.restartAll",
				"title": "Restart all",
				"category": "Steep"
			}
		],
		"configuration": {
			"title": "Steep",
			"properties": {
				"steep.loglevel": {
					"markdownDescription": "The value for `--log-level` option. You can see the output in `output` tab.",
					"type": "string",
					"enum": [
						"error",
						"warn",
						"info",
						"debug"
					],
					"default": "info"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.14.19",
		"@types/vscode": "^1.48.0",
		"glob": "^7.1.5",
		"mocha": "^8.1.1",
		"typescript": "^4.0.2",
		"tslint": "^6.1.3",
		"vscode-test": "^1.4.0",
		"vsce": "^1.79.3"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	}
}
